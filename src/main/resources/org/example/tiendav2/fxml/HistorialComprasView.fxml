<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.tiendav2.controller.HistorialComprasController"
            style="-fx-background-color: #0d0d0d;">

    <top>
        <HBox style="-fx-padding: 20; -fx-background-color: #0d0d0d;" alignment="CENTER_LEFT">
            <Label text="HISTORIAL DE COMPRAS" 
                   style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;" />
            <Region HBox.hgrow="ALWAYS" />
            <Button text="Cerrar" onAction="#cerrar" 
                    style="-fx-background-color: #333; -fx-text-fill: white;" />
        </HBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER">
            <VBox fx:id="contenedorCompras" 
                  style="-fx-padding: 20; -fx-spacing: 20;" 
                  alignment="TOP_CENTER">
                <!-- Las compras se agregarán aquí dinámicamente -->
                <Label text="No hay compras registradas" 
                       style="-fx-text-fill: #888; -fx-font-style: italic;"
                       visible="false"
                       VBox.vgrow="ALWAYS"
                       VBox.valignment="CENTER"/>
            </VBox>
        </ScrollPane>
    </center>

</BorderPane>
