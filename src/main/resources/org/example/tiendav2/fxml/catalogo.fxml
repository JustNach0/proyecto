<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="org.example.tiendav2.controller.CatalogoController" 
      style="-fx-background-color: #f5f5f5;" spacing="20">
    
    <!-- Barra superior -->
    <HBox style="-fx-background-color: #1a73e8; -fx-padding: 15;" spacing="20">
        <Label text="Tienda" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" />
        <Region HBox.hgrow="ALWAYS" />
        <Button text="Cerrar Sesión" onAction="#handleLogout" style="-fx-background-color: #d93025; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" />
    </HBox>
    
    <!-- Contenido principal -->
    <VBox style="-fx-padding: 20;" spacing="20">
        <Label text="Catálogo de Productos" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
        
        <ListView fx:id="productosList" style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 5;" />
    </VBox>
    
    <!-- Pie de página -->
    <VBox style="-fx-background-color: #f1f3f4; -fx-padding: 15;" spacing="10">
        <Label text="© 2025 Tienda - Todos los derechos reservados" style="-fx-text-fill: #5f6368; -fx-font-size: 12px;" />
    </VBox>
    
</VBox>
