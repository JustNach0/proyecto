<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.effect.*?>

<BorderPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.tiendav2.controller.CatalogoController"
            style="-fx-background-color: #0d0d0d;">

    <!-- NAVBAR -->
    <top>
        <HBox spacing="40" alignment="CENTER_LEFT"
              style="-fx-padding: 28 40; -fx-background-color: #0d0d0d;">
            <Label text="NOVA"
                   style="-fx-text-fill: white; -fx-font-size: 32px; -fx-font-weight: bold; -fx-letter-spacing: 6px;" />

            <HBox spacing="24">
                <Label text="Colección" style="-fx-text-fill: #e0e0e0; -fx-font-size: 15px; -fx-cursor: hand;" />
                <Label text="Novedades" style="-fx-text-fill: #e0e0e0; -fx-font-size: 15px; -fx-cursor: hand;" />
                <Label text="Hombres" style="-fx-text-fill: #e0e0e0; -fx-font-size: 15px; -fx-cursor: hand;" />
                <Label text="Mujeres" style="-fx-text-fill: #e0e0e0; -fx-font-size: 15px; -fx-cursor: hand;" />
            </HBox>

            <Pane HBox.hgrow="ALWAYS"/>

            <HBox spacing="16" alignment="CENTER">
                <Label text="Buscar" style="-fx-text-fill: #8a8a8a; -fx-font-size: 15px; -fx-cursor: hand;" />
                <Label text="Cuenta" style="-fx-text-fill: #8a8a8a; -fx-font-size: 15px; -fx-cursor: hand;" />
                <StackPane style="-fx-cursor: hand;">
                    <Label text="Carrito" style="-fx-text-fill: #8a8a8a; -fx-font-size: 15px;" />
                    <Label fx:id="contadorCarrito" 
                           style="-fx-background-color: #ff4444; -fx-text-fill: white; -fx-font-size: 10px; -fx-font-weight: bold;"
                           alignment="CENTER" minWidth="16" minHeight="16"
                           visible="false"
                           StackPane.alignment="TOP_RIGHT">
                        <padding>
                            <Insets top="1" right="3" bottom="1" left="3"/>
                        </padding>
                    </Label>
                </StackPane>
            </HBox>
        </HBox>
    </top>

    <!-- CONTENIDO SCROLLEABLE -->
    <center>
        <ScrollPane fitToWidth="true"
                    hbarPolicy="NEVER"
                    vbarPolicy="AS_NEEDED"
                    style="-fx-background: transparent; -fx-background-color: transparent;">

            <VBox spacing="40" alignment="TOP_CENTER" style="-fx-padding: 40 0;">

                <HBox spacing="20" alignment="CENTER">
                    <Button text="Vista de Cuadrícula" onAction="#desactivarModoNavegacion" 
                            style="-fx-background-color: #333; -fx-text-fill: white; -fx-padding: 8 16;" />
                    <Button text="Vista Detallada" onAction="#activarModoNavegacion" 
                            style="-fx-background-color: #333; -fx-text-fill: white; -fx-padding: 8 16;" />
                </HBox>

                <HBox id="navegacionDetallada" visible="false" spacing="20" alignment="CENTER">
                    <Button text="Anterior" onAction="#productoAnterior" 
                            style="-fx-background-color: #555; -fx-text-fill: white; -fx-padding: 8 24;" />
                    <Label id="contadorProducto" text="1 de 6" 
                           style="-fx-text-fill: white; -fx-font-size: 16px; -fx-min-width: 100; -fx-alignment: center;" />
                    <Button text="Siguiente" onAction="#productoSiguiente" 
                            style="-fx-background-color: #555; -fx-text-fill: white; -fx-padding: 8 24;" />
                </HBox>

                <Label text="Nueva Colección 2025"
                       style="-fx-text-fill: white; -fx-font-size: 42px; -fx-font-weight: 900;" />

                <Label text="Diseños minimalistas, cortes limpios, esencia premium."
                       style="-fx-text-fill: #b0b0b0; -fx-font-size: 16px;" />

                <GridPane fx:id="grid"
                          hgap="40" vgap="50"
                          alignment="CENTER"
                          style="-fx-padding: 20 100;">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="33"/>
                        <ColumnConstraints percentWidth="33"/>
                        <ColumnConstraints percentWidth="33"/>
                    </columnConstraints>
                </GridPane>

            </VBox>

        </ScrollPane>
    </center>

    <!-- PANEL LATERAL DEL CARRITO -->
    <right>
        <VBox style="-fx-background-color: #111; -fx-padding: 20; -fx-spacing: 20; -fx-min-width: 350; -fx-max-width: 350;" 
              alignment="TOP_CENTER">
            <HBox alignment="CENTER" spacing="10">
                <Label text="TU CARRITO" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" />
                <Label fx:id="contadorItems" text="(0 items)" style="-fx-text-fill: #888; -fx-font-size: 14px;" />
            </HBox>
            
            <Separator style="-fx-background-color: #333;" />
            
            <!-- Lista de productos en el carrito -->
            <ScrollPane fx:id="scrollCarrito" 
                       hbarPolicy="NEVER" 
                       vbarPolicy="AS_NEEDED"
                       fitToWidth="true"
                       style="-fx-background: transparent; -fx-background-color: transparent;">
                <VBox fx:id="carritoContenido" spacing="10" style="-fx-padding: 5;" />
            </ScrollPane>
            
            <VBox spacing="10" style="-fx-padding: 10 0;">
                <HBox alignment="CENTER_RIGHT" spacing="10">
                    <Label text="Total:" style="-fx-text-fill: white; -fx-font-size: 16px;" />
                    <Label fx:id="totalCarrito" text="$0.00" style="-fx-text-fill: #4CAF50; -fx-font-size: 18px; -fx-font-weight: bold;" />
                </HBox>
                
                <Button text="Finalizar Compra" 
                        onAction="#finalizarCompra"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 12; -fx-font-size: 14px;"
                        maxWidth="1.7976931348623157E308" />
                
                <Button text="Vaciar Carrito" 
                        onAction="#vaciarCarrito"
                        style="-fx-background-color: transparent; -fx-text-fill: #ff4444; -fx-border-color: #ff4444; -fx-border-width: 1; -fx-padding: 12;"
                        maxWidth="1.7976931348623157E308" />
            </VBox>
        </VBox>
    </right>

    <effect>
        <DropShadow color="#00000066" radius="10" spread="0.1" />
    </effect>
</BorderPane>
