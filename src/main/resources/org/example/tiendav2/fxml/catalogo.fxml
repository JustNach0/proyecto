<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.tiendav2.controller.CatalogoController"
            style="-fx-background-color: #0d0d0d;">

    <!-- NAVBAR -->
    <top>
        <VBox>
            <!-- Header principal -->
            <HBox spacing="40" alignment="CENTER_LEFT"
                  style="-fx-padding: 20 40; -fx-background-color: #0d0d0d;">
                <Label text="NOVA"
                       style="-fx-text-fill: white; -fx-font-size: 32px; -fx-font-weight: bold; -fx-letter-spacing: 6px;" />

                <HBox spacing="24">
                    <Label text="Hombres" style="-fx-text-fill: #e0e0e0; -fx-font-size: 15px; -fx-cursor: hand; -fx-padding: 5;" onMouseClicked="#filtrarHombres" />
                    <Label text="Mujeres" style="-fx-text-fill: #e0e0e0; -fx-font-size: 15px; -fx-cursor: hand; -fx-padding: 5;" onMouseClicked="#filtrarMujeres" />
                    <Label text="Gorras" style="-fx-text-fill: #e0e0e0; -fx-font-size: 15px; -fx-cursor: hand; -fx-padding: 5;" onMouseClicked="#filtrarGorras" />
                </HBox>

                <Pane HBox.hgrow="ALWAYS"/>

                <HBox spacing="16" alignment="CENTER">
                    <Label text="Buscar" style="-fx-text-fill: #8a8a8a;" />
                    <Label text="Cuenta" style="-fx-text-fill: #8a8a8a;" />

                    <!-- BOTÓN DE HISTORIAL -->
                    <StackPane style="-fx-cursor: hand; -fx-padding: 0 10 0 0;" onMouseClicked="#mostrarHistorialCompras">
                        <Label text="H" style="-fx-text-fill: #8a8a8a; -fx-font-size: 16px;">
                            <tooltip>
                                <Tooltip text="Historial de Compras" />
                            </tooltip>
                        </Label>
                    </StackPane>

                    <!-- BOTÓN DE LISTA DE DESEOS -->
                    <StackPane fx:id="btnListaDeseos" style="-fx-cursor: hand; -fx-padding: 0 10 0 0;" onMouseClicked="#mostrarListaDeseos">
                        <Label text="♥" style="-fx-text-fill: #8a8a8a; -fx-font-size: 16px;" />

                        <!-- Contador de items en la lista de deseos -->
                        <Label fx:id="contadorListaDeseos"
                               text="0"
                               visible="false"
                               style="-fx-background-color: #00ff8a; -fx-text-fill: #0d0d0d; -fx-font-size: 10px; -fx-font-weight: bold; -fx-background-radius: 20;"
                               StackPane.alignment="TOP_RIGHT"
                               minWidth="16" minHeight="16">
                            <padding>
                                <Insets top="1" right="3" bottom="1" left="3"/>
                            </padding>
                        </Label>
                    </StackPane>

                    <!-- BOTÓN DEL CARRITO -->
                    <StackPane fx:id="btnCarrito" style="-fx-cursor: hand;">
                        <Label text="Carrito" style="-fx-text-fill: #8a8a8a;" />

                        <!-- Burbuja del contador -->
                        <Label fx:id="contadorCarrito"
                               text="0"
                               visible="false"
                               style="-fx-background-color: #ff4444; -fx-text-fill: white; -fx-font-size: 10px; -fx-font-weight: bold; -fx-background-radius: 20;"
                               StackPane.alignment="TOP_RIGHT"
                               minWidth="16" minHeight="16">
                            <padding>
                                <Insets top="1" right="3" bottom="1" left="3"/>
                            </padding>
                        </Label>
                    </StackPane>
                </HBox>
            </HBox>

            <!-- Banner Hero -->
            <StackPane style="-fx-background-color: #1a1a1a; -fx-padding: 25 40; -fx-background-radius: 0;">
                <HBox spacing="0" alignment="CENTER_LEFT">
                    <VBox spacing="10" prefWidth="650">
                        <Label text="Nueva Colección 2025"
                               style="-fx-text-fill: white; -fx-font-size: 42px; -fx-font-weight: bold;" />
                        <Label text="Diseños minimalistas, cortes limpios, esencia premium."
                               style="-fx-text-fill: #b0b0b0; -fx-font-size: 16px;" />
                        <HBox spacing="15" style="-fx-padding: 15 0 0 0;">
                            <Button text="Ver productos" style="-fx-background-color: #00ff8a; -fx-text-fill: black; -fx-font-weight: bold; -fx-padding: 10 20;" />
                            <Button text="Ver ofertas" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: white; -fx-border-width: 1; -fx-padding: 10 20;" />
                        </HBox>
                    </VBox>
                    <Pane HBox.hgrow="ALWAYS" />
                    <HBox spacing="10" alignment="CENTER">
                        <Button text="Vista Cuadricula" onAction="#desactivarModoNavegacion"
                                style="-fx-background-color: #333; -fx-text-fill: white; -fx-padding: 8 15;" />
                        <Button text="Vista Detallada" onAction="#activarModoNavegacion"
                                style="-fx-background-color: #333; -fx-text-fill: white; -fx-padding: 8 15;" />
                    </HBox>
                </HBox>
            </StackPane>
        </VBox>
    </top>

    <!-- CONTENIDO CENTRAL CON SCROLL -->
    <center>
        <ScrollPane fitToWidth="true"
                    hbarPolicy="NEVER"
                    vbarPolicy="AS_NEEDED"
                    style="-fx-background: #0d0d0d; -fx-background-color: #0d0d0d; -fx-padding: 0;"
                    fitToHeight="true">
            <VBox spacing="0"
                  alignment="TOP_CENTER"
                  style="-fx-padding: 0;"
                  maxWidth="1200"
                  prefWidth="1200">

                <!-- VISTA DETALLADA DEL PRODUCTO -->
                <VBox fx:id="navegacionDetallada"
                      visible="false"
                      spacing="10"
                      alignment="CENTER"
                      style="-fx-padding: 20; -fx-background-color: #1a1a1a; -fx-background-radius: 10; -fx-margin: 15 0 0 0;">
                    <!-- Controles de navegación -->
                    <HBox spacing="20" alignment="CENTER">
                        <Button onAction="#productoAnterior"
                                style="-fx-background-color: #333; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8 20;"
                                text="Anterior"/>

                        <Button onAction="#desactivarModoNavegacion"
                                style="-fx-background-color: #444; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8 20;"
                                text="Volver a la cuadricula"/>

                        <Button onAction="#productoSiguiente"
                                style="-fx-background-color: #333; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8 20;"
                                text="Siguiente"/>
                    </HBox>

                    <!-- Contenido del producto -->
                    <HBox spacing="20" alignment="CENTER">
                        <!-- Imagen del producto -->
                        <StackPane style="-fx-background-color: #222; -fx-padding: 10; -fx-background-radius: 10;" maxWidth="350">
                            <ImageView fx:id="imagenProductoDetallado" fitWidth="300" fitHeight="300" preserveRatio="true">
                                <effect>
                                    <DropShadow offsetX="0" offsetY="0" radius="5" />
                                </effect>
                            </ImageView>
                        </StackPane>

                        <!-- Información del producto -->
                        <VBox spacing="8" style="-fx-max-width: 350; -fx-padding: 10 0;">
                            <Label fx:id="nombreProductoDetallado"
                                   style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold; -fx-wrap-text: true;"/>

                            <Label fx:id="precioProductoDetallado"
                                   style="-fx-text-fill: #00ff8a; -fx-font-size: 28px; -fx-font-weight: bold;"/>

                            <Label fx:id="descripcionProductoDetallado"
                                   style="-fx-text-fill: #b0b0b0; -fx-font-size: 16px; -fx-wrap-text: true;"/>

                            <HBox spacing="15" style="-fx-padding: 20 0 0 0;">
                                <Button onAction="#agregarAlCarritoDesdeDetalle"
                                        style="-fx-background-color: #00ff8a; -fx-text-fill: #0d0d0d; -fx-font-weight: bold; -fx-padding: 12 30;"
                                        text="Anadir al carrito"/>

                                <Button onAction="#agregarAListaDeseosDesdeDetalle"
                                        style="-fx-background-color: #333; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 12 20;"
                                        text="+ Anadir a deseos"/>
                            </HBox>
                        </VBox>
                    </HBox>
                </VBox>

                <!-- GRID DE PRODUCTOS -->
                <GridPane fx:id="grid"
                          hgap="25" vgap="30"
                          alignment="CENTER"
                          style="-fx-padding: 30 0 50 0;">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="33"/>
                        <ColumnConstraints percentWidth="33"/>
                        <ColumnConstraints percentWidth="33"/>
                    </columnConstraints>
                </GridPane>
            </VBox>
        </ScrollPane>
    </center>

    <!-- PANEL DEL CARRITO -->
    <right>
        <VBox fx:id="panelCarrito"
              style="-fx-background-color: #111; -fx-padding: 20; -fx-spacing: 20;"
              alignment="TOP_CENTER"
              visible="false">

            <HBox alignment="CENTER" spacing="10">
                <Label text="TU CARRITO" style="-fx-text-fill: white; -fx-font-size: 18px;" />
                <Label fx:id="contadorItems"
                       text="(0 items)"
                       style="-fx-text-fill: #888;" />
            </HBox>

            <Separator />

            <ScrollPane fx:id="scrollCarrito" vbarPolicy="AS_NEEDED" fitToWidth="true">
                <VBox fx:id="carritoContenido" spacing="10"
                      style="-fx-padding: 10;" />
            </ScrollPane>

            <VBox spacing="10">
                <HBox alignment="CENTER_RIGHT">
                    <Label text="Total:" style="-fx-text-fill: white;" />
                    <Label fx:id="totalCarrito"
                           text="\$0.00"
                           style="-fx-text-fill: #00ff8a; -fx-font-size: 18px;" />
                </HBox>

                <Button text="Finalizar Compra"
                        onAction="#finalizarCompra"
                        style="-fx-background-color: #00ff8a; -fx-text-fill: black;" />

                <Button text="Vaciar Carrito"
                        onAction="#vaciarCarrito"
                        style="-fx-background-color: transparent; -fx-text-fill: #ff4444; -fx-border-color: #ff4444;" />
            </VBox>
        </VBox>
    </right>
</BorderPane>
