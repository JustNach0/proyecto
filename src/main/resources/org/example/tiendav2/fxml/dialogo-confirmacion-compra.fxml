<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.tiendav2.controller.DialogoConfirmacionCompraController"
      style="-fx-background-color: #0d0d0d;"
      spacing="0"
      prefWidth="550"
      prefHeight="500">

    <!-- Header con icono de éxito -->
    <VBox alignment="CENTER" spacing="15" style="-fx-background-color: linear-gradient(to bottom, #00ff8a, #00cc6f); -fx-padding: 40;">
        <Label text="✓" style="-fx-text-fill: #0d0d0d; -fx-font-size: 72px; -fx-font-weight: bold;" />
        <Label text="Compra Exitosa" style="-fx-text-fill: #0d0d0d; -fx-font-size: 28px; -fx-font-weight: bold;" />
        <Label text="Tu pedido ha sido procesado correctamente" style="-fx-text-fill: #0d0d0d; -fx-font-size: 14px;" />
    </VBox>

    <!-- Contenido -->
    <VBox spacing="20" style="-fx-padding: 30;">
        
        <!-- ID del pedido -->
        <VBox spacing="8" alignment="CENTER" style="-fx-background-color: #1a1a1a; -fx-padding: 20; -fx-background-radius: 8;">
            <Label text="Numero de Pedido" style="-fx-text-fill: #aaa; -fx-font-size: 12px;" />
            <Label fx:id="lblNumeroPedido" text="#XXXXXXXX" style="-fx-text-fill: #00ff8a; -fx-font-size: 24px; -fx-font-weight: bold; -fx-font-family: 'Courier New';" />
        </VBox>

        <!-- Detalles del pedido -->
        <VBox spacing="12" style="-fx-background-color: #1a1a1a; -fx-padding: 20; -fx-background-radius: 8;">
            <Label text="Detalles del Pedido" style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" />
            <Separator style="-fx-background-color: #333;" />
            
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Total:" style="-fx-text-fill: #aaa; -fx-font-size: 14px; -fx-min-width: 120;" />
                <Label fx:id="lblTotal" text="\$0.00" style="-fx-text-fill: #00ff8a; -fx-font-size: 18px; -fx-font-weight: bold;" />
            </HBox>
            
            <HBox alignment="TOP_LEFT" spacing="10">
                <Label text="Direccion:" style="-fx-text-fill: #aaa; -fx-font-size: 14px; -fx-min-width: 120;" />
                <Label fx:id="lblDireccion" text="..." wrapText="true" style="-fx-text-fill: white; -fx-font-size: 14px;" HBox.hgrow="ALWAYS" />
            </HBox>
            
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Metodo de Pago:" style="-fx-text-fill: #aaa; -fx-font-size: 14px; -fx-min-width: 120;" />
                <Label fx:id="lblMetodoPago" text="..." style="-fx-text-fill: white; -fx-font-size: 14px;" />
            </HBox>
        </VBox>

        <!-- Mensaje informativo -->
        <VBox spacing="8" style="-fx-background-color: #1a1a1a; -fx-padding: 15; -fx-background-radius: 8; -fx-border-color: #00ff8a; -fx-border-width: 1; -fx-border-radius: 8;">
            <Label text="Recibirás un correo de confirmación con los detalles de tu pedido." 
                   wrapText="true"
                   style="-fx-text-fill: #ccc; -fx-font-size: 13px; -fx-text-alignment: center;" />
        </VBox>

    </VBox>

    <!-- Botón de cerrar -->
    <HBox alignment="CENTER" style="-fx-padding: 0 30 30 30;">
        <Button text="Aceptar" onAction="#cerrar" 
                style="-fx-background-color: #00ff8a; -fx-text-fill: #0d0d0d; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 12 50; -fx-background-radius: 5; -fx-cursor: hand;"
                prefWidth="200" />
    </HBox>

</VBox>
