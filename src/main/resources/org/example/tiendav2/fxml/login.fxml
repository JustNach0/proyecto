<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<StackPane xmlns="http://javafx.com/javafx/25"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="org.example.tiendav2.controller.LoginController"
           prefWidth="430" prefHeight="600"
           style="-fx-background-color: linear-gradient(to bottom, #0d0d0d, #151515);">

    <VBox alignment="CENTER" spacing="40">

        <!-- HEADER -->
        <VBox alignment="CENTER" spacing="8">
            <Label text="TIENDA"
                   style="-fx-text-fill: white; -fx-font-size: 36px; -fx-font-weight: bold; -fx-letter-spacing: 5px;" />
            <Label text="Bienvenido"
                   style="-fx-text-fill: #888; -fx-font-size: 16px;" />
        </VBox>

        <!-- FORM -->
        <VBox alignment="CENTER_LEFT" spacing="22" prefWidth="320">

            <!-- EMAIL -->
            <VBox spacing="6">
                <Label text="Email"
                       style="-fx-text-fill: #d0d0d0; -fx-font-size: 14px;" />
                <TextField fx:id="txtEmail"
                           promptText="correo@example.com"
                           style="-fx-background-radius: 12;
                                  -fx-background-color: #1e1e1e;
                                  -fx-text-fill: white;
                                  -fx-prompt-text-fill: #666;
                                  -fx-padding: 12;" />
            </VBox>

            <!-- PASSWORD -->
            <VBox spacing="6">
                <Label text="Contraseña"
                       style="-fx-text-fill: #d0d0d0; -fx-font-size: 14px;" />
                <PasswordField fx:id="txtPassword"
                               promptText="••••••••"
                               style="-fx-background-radius: 12;
                                      -fx-background-color: #1e1e1e;
                                      -fx-text-fill: white;
                                      -fx-prompt-text-fill: #666;
                                      -fx-padding: 12;" />
            </VBox>

            <!-- LABEL DE MENSAJES (IMPORTANTE PARA EVITAR ERROR) -->
            <Label fx:id="messageLabel"
                   text=""
                   style="-fx-text-fill: #ff5252; -fx-font-size: 12px;" />

            <!-- BOTÓN -->
            <Button fx:id="btnLogin"
                    text="Iniciar Sesión"
                    onAction="#handleLogin"
                    prefWidth="320"
                    style="-fx-background-radius: 12;
                           -fx-background-color: #00ff8a;
                           -fx-text-fill: black;
                           -fx-font-weight: bold;
                           -fx-padding: 12;
                           -fx-font-size: 15px;
                           -fx-cursor: hand;" />

            <Label text="¿Olvidaste tu contraseña?"
                   style="-fx-text-fill: #777; -fx-font-size: 12px; -fx-cursor: hand;" />
        </VBox>

        <!-- FOOTER -->
        <Label text="© 2025 TiendaV2"
               style="-fx-text-fill: #444; -fx-font-size: 11px;" />
    </VBox>
</StackPane>
