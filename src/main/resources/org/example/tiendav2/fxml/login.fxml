<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane prefWidth="420" prefHeight="520" style="-fx-background-color: linear-gradient(to bottom, #111, #1a1a1a);" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">

    <VBox spacing="28" alignment="CENTER">

        <!-- Logo / Título estilo minimal elegante -->
        <VBox alignment="CENTER">
            <Label text="TIENDA" style="-fx-text-fill: white; -fx-font-size: 32px; -fx-font-weight: bold; -fx-letter-spacing: 3px;" />
            <Label text="Bienvenido" style="-fx-text-fill: #888; -fx-font-size: 14px;" />
        </VBox>

        <!-- Caja de login -->
        <VBox spacing="18" prefWidth="300" alignment="CENTER_LEFT">

            <VBox spacing="6">
                <Label text="Email" style="-fx-text-fill: #d0d0d0; -fx-font-size: 14px;" />
                <TextField fx:id="txtEmail" promptText="correo@example.com"
                           style="-fx-background-radius: 10; -fx-background-color: #222; -fx-text-fill: white; -fx-prompt-text-fill: #666; -fx-padding: 10;" />
            </VBox>

            <VBox spacing="6">
                <Label text="Contraseña" style="-fx-text-fill: #d0d0d0; -fx-font-size: 14px;" />
                <PasswordField fx:id="txtPassword" promptText="••••••••"
                               style="-fx-background-radius: 10; -fx-background-color: #222; -fx-text-fill: white; -fx-prompt-text-fill: #666; -fx-padding: 10;" />
            </VBox>

            <Button fx:id="btnLogin" text="Iniciar Sesión"
                    style="-fx-background-radius: 10; -fx-background-color: #00d084; -fx-text-fill: black; -fx-font-weight: bold; -fx-padding: 10; -fx-font-size: 14px;"
                    prefWidth="300" />

            <Label text="¿Olvidaste tu contraseña?" style="-fx-text-fill: #888; -fx-font-size: 12px;" />
        </VBox>

        <!-- Footer minimal -->
        <Label text="© 2025 TiendaV2" style="-fx-text-fill: #444; -fx-font-size: 11px;" />
    </VBox>
</StackPane>
